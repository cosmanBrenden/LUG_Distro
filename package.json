{
  "name": "lug-distro",
  "version": "1.0.0",
  "description": "LUG - A Debian-based Linux distribution with KDE Plasma 5.27",
  "scripts": {
    "build": "docker compose build",
    "build:iso": "docker compose run --rm iso-builder",
    "dev": "docker compose run --rm --service-ports dev-env",
    "shell": "docker compose run --rm iso-builder /bin/bash",
    "clean": "docker compose down -v && rm -rf build/iso/*.iso",
    "clean:all": "docker compose down -v --rmi all && rm -rf build/",
    "logs": "docker compose logs -f",
    "start": "npm run build:iso",
    "test:boot": "docker compose run --rm iso-test",
    "qemu": "qemu-system-x86_64 -m 4096 -smp 2 -enable-kvm -cdrom build/lug-live-*.iso -boot d -vga virtio"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cosmanBrenden/LUG_Distro.git"
  },
  "keywords": [
    "linux",
    "debian",
    "kde-plasma",
    "live-iso",
    "distribution"
  ],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/cosmanBrenden/LUG_Distro/issues"
  },
  "homepage": "https://github.com/cosmanBrenden/LUG_Distro#readme"
}
